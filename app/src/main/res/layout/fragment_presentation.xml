<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/marg_tendp"
    android:elevation="@dimen/marg_fivedp"
    tools:context=".presentationmodule.presfragment.PresentationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marg_fiftendp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_fivedp"
                android:gravity="bottom"
                android:hint="@string/select_leader"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spn_pres_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/marg_fivedp"
                android:background="@color/gray"
                android:padding="@dimen/marg_onedp" />

            <TextView
                android:id="@+id/tv_pres_previouscomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marg_fivedp"
                android:text="@string/prev_comment"
                android:textColor="@color/blue" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_fivedp">

                <EditText
                    android:id="@+id/edt_pres_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/str_remarks"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textSize="@dimen/txt_small" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_fivedp"
                android:gravity="bottom"
                android:hint="@string/next_visit_purpose"
                android:textSize="@dimen/txt_small" />

            <Spinner
                android:id="@+id/spn_pres_nextvisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/marg_fivedp"
                android:background="@color/gray"
                android:padding="@dimen/marg_onedp" />

            <TextView
                android:id="@+id/tv_pres_appointmenttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_fiftendp"
                android:layout_marginBottom="@dimen/marg_fivedp"
                android:drawableRight="@drawable/calender"
                android:hint="@string/appointment_date"
                android:paddingBottom="@dimen/marg_threedp"
                android:textSize="@dimen/txt_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/marg_fivedp"
                android:background="@color/gray"
                android:padding="@dimen/marg_onedp" />


            <TextView
                android:id="@+id/tv_pres_bizcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_fiftendp"
                android:drawableRight="@drawable/ic_upload"
                android:drawablePadding="@dimen/marg_threedp"
                android:hint="@string/biz_card"
                android:padding="@dimen/marg_threedp"
                android:textSize="@dimen/txt_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/marg_twenty"
                android:background="@color/gray"
                android:padding="@dimen/marg_onedp" />


            <Button
                android:id="@+id/btn_pres_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/button_blue"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>